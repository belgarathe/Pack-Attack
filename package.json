    "create-bots": "tsx scripts/create-bots.ts",
    "create-test-users": "tsx scripts/create-test-users.ts",
    "build:prod": "npm ci && prisma generate && prisma migrate deploy && next build",
    "typecheck": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:tablet": "playwright test --project=tablet-ipad",
    "test:cross-browser": "playwright test tests/cross-browser.spec.ts",
    "test:mobile-responsive": "playwright test tests/mobile-responsive.spec.ts",
    "test:accessibility": "playwright test tests/accessibility.spec.ts",
    "test:visual": "playwright test tests/visual-regression.spec.ts",
    "test:update-snapshots": "playwright test --update-snapshots"
  },
